/// @desc Sprite struct

handleSprite = function()
{
	switch (number_of_points_incremented)
	{
		case 1:
			sprite_index = spr_Points_1;
			image_speed = 0;
			break;
	 
		case 2:
			sprite_index = spr_Points_2;
			image_speed = 0;
			break;
			
		case 3:
			sprite_index = spr_Points_3;
			image_speed = 0;
			break;
			
		case 4:
			sprite_index = spr_Points_4;
			image_speed = 0;
			break;
			
		case 5:
			sprite_index = spr_Points_5;
			image_speed = 0;
			break;
	}
}